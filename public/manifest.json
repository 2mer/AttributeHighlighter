{
	"manifest_version": 2,
	"name": "ReMe",
	"description": "Record macros, and apply them to pages",
	"version": "1.0",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"browser_action": {
		"default_icon": "icon48.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/vendor.js",
				"js/content_script.js"
			],
			"run_at": "document_end"
		}
	],
	"background": {
		"scripts": [
			"js/vendor.js",
			"js/background.js"
		]
	},
	"permissions": [
		"storage",
		"<all_urls>"
	]
}